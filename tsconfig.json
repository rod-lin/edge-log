{
    "compilerOptions": {
        "target": "esnext",
        "lib": ["esnext", "webworker"],
        "alwaysStrict": true,
        "strict": true,
        "preserveConstEnums": true,
        "moduleResolution": "node",
        "inlineSourceMap": true,
        "esModuleInterop": true
    },
    "include": ["src/**/*.ts", "test/**/*.ts"],
    "exclude": ["node_modules/", "dist/"]
}
