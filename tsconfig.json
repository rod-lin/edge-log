{
    "compilerOptions": {
        "target": "es6",
        "lib": ["es6", "webworker", "dom"],
        "alwaysStrict": true,
        "strict": true,
        "preserveConstEnums": true,
        "moduleResolution": "node",
        "inlineSourceMap": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "jsx": "preserve"
    },
    "include": ["src/**/*.ts", "src/**/*.tsx", "test/**/*.ts", "test/**/*.tsx"],
    "exclude": ["node_modules/", "dist/"]
}
